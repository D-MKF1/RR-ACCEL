<PropertyList>

<path>trimpanel.ac</path>

	<animation>
		<type>material</type>
		<object-name>cover_1</object-name>
		<object-name>cover_2</object-name>
		<object-name>cover_3</object-name>
		<object-name>frames</object-name>
		<object-name>lamps</object-name>
		<object-name>slider_1</object-name>
		<object-name>slider_2</object-name>
		<object-name>sockle</object-name>
		<object-name>switch_1</object-name>
		<object-name>switch_2</object-name>
		<object-name>switch_3</object-name>
		<object-name>switch_main</object-name>
		<object-name>trimpanel</object-name>
		<condition>
      <not><property>/sim/rendering/rembrandt/enabled</property></not>
      <property>systems/accel-electrical/outputs/cabin-dim</property>
    </condition>
    <emission>
      <red>0.4</red>
      <green>0.4</green>
      <blue>0.4</blue>
      <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
    </emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>led_green_1</object-name>
		<object-name>led_green_2</object-name>
		<emission>
		  <red>   0.0 </red>
		  <green> 1.0 </green>
		  <blue>  0.0 </blue>
		</emission>
	</animation>

	<animation>
		<type>select</type>
		<object-name>led_green_2</object-name>
		<condition>
		<and>
      <property>controls/flight/trim-enable</property>
			<property>systems/accel-electrical/start12v</property>
			<greater-than>
				<property>systems/accel-electrical/battery/engine-volts</property>
				<value>12</value>
			</greater-than>
      <or>
  			<greater-than>
  				<property>controls/flight/rudder-trim</property>
    			<value>0</value>
  			</greater-than>
  			<greater-than>
  				<property>controls/flight/aileron-trim</property>
    			<value>0</value>
  			</greater-than>
  			<greater-than>
  				<property>controls/flight/elevator-trim</property>
    			<value>0</value>
  			</greater-than>
      </or>
		</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>led_green_1</object-name>
		<condition>
		<and>
      <property>controls/flight/trim-enable</property>
			<property>systems/accel-electrical/start12v</property>
			<greater-than>
				<property>systems/accel-electrical/battery/engine-volts</property>
				<value>12</value>
			</greater-than>
      <or>
  			<less-than>
  				<property>controls/flight/rudder-trim</property>
    			<value>0</value>
  			</less-than>
  			<less-than>
  				<property>controls/flight/aileron-trim</property>
    			<value>0</value>
  			</less-than>
  			<less-than>
  				<property>controls/flight/elevator-trim</property>
    			<value>0</value>
  			</less-than>
      </or>
		</and>
		</condition>
	</animation>

  <animation>
      <type>rotate</type>
      <object-name>switch_main</object-name>
      <property>controls/flight/trim-enable</property>
      <factor>-60</factor>
      <axis>
       <x>0</x>
       <y>1</y>
       <z>0</z>
      </axis>
      <center>
      <x-m>0.004452</x-m>
      <y-m>-0.02949</y-m>
      <z-m>0.09696</z-m>
      </center>
  </animation>

  <animation>
      <type>pick</type>
      <object-name>switch_main_click</object-name>
      <visible>false</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-toggle</command>
            <property>controls/flight/trim-enable</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
      </action>
  </animation>

  <!-- Rudder Trim -->
<animation>
	<type>translate</type>
	<object-name>slider_1</object-name>
	<property>controls/flight/rudder-trim</property>
	<factor>0.035</factor>
	<axis>
		<x>0.0</x>
		<y>1.0</y>
		<z>0.0</z>
	</axis>
</animation>

<animation>
    <type>pick</type>
    <object-name>slider_1_click</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
       <binding>
        <command>nasal</command>
        <script>rraccel.applyTrimWheels(0, 1)</script>
       </binding>
    </action>
    <action>
        <button>3</button>
        <binding>
        <condition>
            <not><property>devices/status/keyboard/shift</property></not>
            <not><property>devices/status/keyboard/super</property></not>
        </condition>
        <command>property-adjust</command>
        <property>controls/flight/rudder-trim</property>
        <step>0.005</step>
        <min>-1.0</min>
        <max>1.0</max>
        <wrap>false</wrap>
        </binding>
        <binding>
        <condition>
           <or>
            <property>devices/status/keyboard/shift</property>
            <property>devices/status/keyboard/super</property>
           </or>
        </condition>
        <command>property-adjust</command>
        <property>controls/flight/rudder-trim</property>
        <step>0.02</step>
        <min>-1.0</min>
        <max>1.0</max>
        <wrap>false</wrap>
        </binding>
				<binding>
					<command>nasal</command>
					<script>rraccel.h_ruddertrim()</script>
				</binding>
    </action>
    <action>
        <button>4</button>
        <binding>
          <condition>
              <not><property>devices/status/keyboard/shift</property></not>
              <not><property>devices/status/keyboard/super</property></not>
          </condition>
        <command>property-adjust</command>
        <property>controls/flight/rudder-trim</property>
        <step>-0.005</step>
        <min>-1.0</min>
        <max>1.0</max>
        <wrap>false</wrap>
        </binding>
        <binding>
        <condition>
           <or>
            <property>devices/status/keyboard/shift</property>
            <property>devices/status/keyboard/super</property>
           </or>
        </condition>
        <command>property-adjust</command>
        <property>controls/flight/rudder-trim</property>
        <step>-0.02</step>
        <min>-1.0</min>
        <max>1.0</max>
        <wrap>false</wrap>
        </binding>
				<binding>
					<command>nasal</command>
					<script>rraccel.h_ruddertrim()</script>
				</binding>
    </action>
</animation>

