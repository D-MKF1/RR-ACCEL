<PropertyList>

<path>ipad.ac</path>

<effect>
  <inherits-from>../../../Effects/lcd_display</inherits-from>
  <object-name>ipad.display</object-name>
</effect>

<animation>
  <type>material</type>
  <object-name>ipad</object-name>
  <object-name>ipad.startdisplay</object-name>
  <condition>
    <not><property>/sim/rendering/rembrandt/enabled</property></not>
    <property>systems/accel-electrical/outputs/cabin-dim</property>
  </condition>
  <emission>
    <red>0.8</red>
    <green>0.8</green>
    <blue>0.8</blue>
    <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
  </emission>
</animation>

<animation>
    <type>material</type>
    <object-name>ipad.display</object-name>
    <emission>
        <red>0.8</red>
        <green>0.8</green>
        <blue>0.8</blue>
        <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
    </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>ipad.startdisplay</object-name>
  <condition>
    <property>electrical-flight-events/ipad/start</property>
  </condition>
</animation>

<animation>
		<type>pick</type>
		<object-name>ipad.start</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
          <command>property-toggle</command>
          <property>electrical-flight-events/ipad/start</property>
      </binding>
    </action>
</animation>

</PropertyList>
