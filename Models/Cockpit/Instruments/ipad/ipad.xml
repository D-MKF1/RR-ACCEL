<PropertyList>

<path>ipad.ac</path>

<effect>
  <inherits-from>../../../Effects/lcd_display</inherits-from>
  <object-name>ipad.display</object-name>
</effect>

<animation>
  <type>material</type>
  <object-name>ipad</object-name>
  <object-name>ipad.startdisplay</object-name>
  <object-name>startbtn</object-name>
  <object-name>stopbtn</object-name>
  <condition>
    <not><property>/sim/rendering/rembrandt/enabled</property></not>
    <property>systems/accel-electrical/outputs/cabin-dim</property>
  </condition>
  <emission>
    <red>0.8</red>
    <green>0.8</green>
    <blue>0.8</blue>
    <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
  </emission>
</animation>

<animation>
    <type>material</type>
    <object-name>ipad.display</object-name>
    <emission>
        <red>0.8</red>
        <green>0.8</green>
        <blue>0.8</blue>
        <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
    </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>ipad.startdisplay</object-name>
  <object-name>click8nm</object-name>
  <object-name>click300</object-name>
  <object-name>clickclimb</object-name>
  <object-name>clickvmax</object-name>
  <condition>
    <and>
      <property>electrical-flight-events/ipad/start</property>
      <equals>
          <property>electrical-flight-events/ipad/page</property>
          <value>start</value>
      </equals>
    </and>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>startbtn</object-name>
  <condition>
    <and>
      <property>electrical-flight-events/ipad/start</property>
      <not>
        <property>electrical-flight-events/start-event</property>
      </not>
      <not-equals>
          <property>electrical-flight-events/ipad/page</property>
          <value>start</value>
      </not-equals>
    </and>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>stopbtn</object-name>
  <condition>
    <and>
      <property>electrical-flight-events/ipad/start</property>
      <property>electrical-flight-events/start-event</property>
      <not-equals>
          <property>electrical-flight-events/ipad/page</property>
          <value>start</value>
      </not-equals>
    </and>
  </condition>
</animation>

<animation>
    <type>pick</type>
    <object-name>startbtn</object-name>
    <object-name>stopbtn</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>electrical-flight-events/start-event</property>
      </binding>
    </action>
</animation>

<animation>
		<type>pick</type>
		<object-name>clickvmax</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>electrical-flight-events/ipad/page</property>
        <value>vmax</value>
      </binding>
    </action>
</animation>

<animation>
		<type>pick</type>
		<object-name>click300</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>electrical-flight-events/ipad/page</property>
        <value>300on3</value>
      </binding>
    </action>
</animation>

<animation>
		<type>pick</type>
		<object-name>click8nm</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>electrical-flight-events/ipad/page</property>
        <value>8nm</value>
      </binding>
    </action>
</animation>

<animation>
		<type>pick</type>
		<object-name>clickclimb</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>electrical-flight-events/ipad/page</property>
        <value>climb</value>
      </binding>
    </action>
</animation>

<animation>
		<type>pick</type>
		<object-name>ipad.start</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>canvas_iPad.startipad()</script>
      </binding>
    </action>
</animation>

<animation>
  <type>rotate</type>
  <object-name>ipad.cable</object-name>
  <property>/orientation/roll-deg</property>
  <interpolation>
    <entry><ind>-90.0</ind><dep>-48.0</dep></entry>
    <entry><ind> 90.0</ind><dep> 48.0</dep></entry>
  </interpolation>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
  <center>
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>-0.1218</z-m>
  </center>
</animation>

</PropertyList>
