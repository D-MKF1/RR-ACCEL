<!-- knob to set the frequencies -->

<animation>
  <type>rotate</type>
  <object-name>StdbyKnob1</object-name>
  <property>instrumentation/comm/frequencies/standby-mhz</property>
  <interpolation>
    <entry><ind>118</ind><dep>  0</dep></entry>
    <entry><ind>136</ind><dep>720</dep></entry>
  </interpolation>
  <center>
    <x-m>0</x-m>
    <y-m>0.01792</y-m>
    <z-m>-0.01117</z-m>
  </center>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>
<animation>
  <type>pick</type>
  <object-name>StdbyKnob1</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>instrumentation/comm/frequencies/standby-mhz</property>
      <step>10</step>
      <min>118</min>
      <max>136</max>
      <wrap>true</wrap>
    </binding>
    <binding>
			<command>property-toggle</command>
			<property>sim/sound/switch2</property>
		</binding>
  </action>
  <action>
    <button>1</button>
    <repeatable>false</repeatable>
