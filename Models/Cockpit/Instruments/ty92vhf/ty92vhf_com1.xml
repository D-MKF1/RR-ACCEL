<!-- signal - qualitiy - knob  is alias to volume -->

<animation>
  <type>rotate</type>
  <object-name>knob.sq</object-name>
  <property>instrumentation/comm/volume</property>
  <factor>-100</factor>
  <center>
    <x-m> 0</x-m>
    <y-m> -0.01672</y-m>
    <z-m> -0.01402</z-m>
  </center>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
