<PropertyList>

<path>gearhandle.ac</path>

	<animation>
		<type>material</type>
		<object-name>lampgears</object-name>
		<object-name>lampwarning</object-name>
		<condition>
      <not><property>/sim/rendering/rembrandt/enabled</property></not>
      <property>systems/accel-electrical/outputs/cabin-dim</property>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0.8</blue>
      <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
    </emission>
	</animation>


  <animation>
    <type>material</type>
		<object-name>cabinlightknob</object-name>
    <condition>
      <not><property>/sim/rendering/rembrandt/enabled</property></not>
      <property>systems/accel-electrical/outputs/cabin-dim</property>
    </condition>
    <emission>
      <red>0.5</red>
      <green>0.5</green>
      <blue>0.5</blue>
      <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>flapslever</object-name>
    <object-name>gearbox</object-name>
    <object-name>gearslever</object-name>
    <object-name>throttlelever</object-name>
		<object-name>plate</object-name>
		<object-name>screw</object-name>
    <condition>
      <not><property>/sim/rendering/rembrandt/enabled</property></not>
      <property>systems/accel-electrical/outputs/cabin-dim</property>
    </condition>
    <emission>
      <red>0.15</red>
      <green>0.15</green>
      <blue>0.15</blue>
      <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
    </emission>
  </animation>

<!-- Gears Down lamp -->
	<animation>
		<type>material</type>
		<object-name>lampgears_yellow</object-name>
		<emission>
			<red>   1.0 </red>
			<green> 0.8 </green>
			<blue>  0.4 </blue>
		</emission>
	</animation>

	<animation>
		<type>select</type>
		<object-name>lampgears_yellow</object-name>
		<condition>
		<or>
			<and>
				<greater-than>
					<property>systems/accel-electrical/battery/engine-volts</property>
					<value>12</value>
				</greater-than>
				<property>systems/accel-electrical/start12v</property>
				<property>controls/gear/gear-down</property>
			</and>
			<property>fdm/jsbsim/systems/crash-detect/crash-save</property>
		</or>
		</condition>
	</animation>

	<!-- Warning lamp -->
		<animation>
			<type>material</type>
			<object-name>lampwarning_red</object-name>
			<emission>
				<red>   1.0 </red>
				<green> 0.8 </green>
				<blue>  0.4 </blue>
			</emission>
		</animation>

		<animation>
			<type>select</type>
			<object-name>lampwarning_red</object-name>
			<condition>
			<or>
				<and>
					<greater-than>
						<property>systems/accel-electrical/battery/engine-volts</property>
						<value>12</value>
					</greater-than>
					<property>systems/accel-electrical/start12v</property>
					<not>
						<property>systems/accel-electrical/start</property>
					</not>
				</and>
				<property>fdm/jsbsim/systems/crash-detect/crash-save</property>
			</or>
			</condition>
		</animation>

	<!-- Throttle lever -->
<animation>
	<type>translate</type>
	<object-name>throttlelever</object-name>
	<property>controls/engines/engine[0]/throttle</property>
	<factor>0.05</factor>
	<axis>
		<x>1.0</x>
		<y>0.0</y>
		<z>0.0</z>
	</axis>
</animation>

<animation>
	<type>pick</type>
	<object-name>throttlelever</object-name>
	<action>
		<button>3</button>
		<repeatable>false</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>controls/engines/engine[0]/throttle</property>
			<step>-0.05</step>
			<min>0</min>
			<max>1</max>
			<wrap>false</wrap>
		</binding>
	</action>
	<action>
		<button>4</button>
		<repeatable>false</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>controls/engines/engine[0]/throttle</property>
			<step>0.05</step>
			<min>0</min>
			<max>1</max>
			<wrap>false</wrap>
		</binding>
	</action>
</animation>

  <!-- Flaps lever -->
<animation>
  <type>rotate</type>
  <object-name>flapslever</object-name>
  <property>controls/flight/flaps</property>
  <factor>24</factor>
  <center>
    <x-m> 0.2818</x-m>
    <y-m>-0.4928</y-m>
    <z-m>-0.0032</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>pick</type>
  <object-name>flapslever</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>controls.flapsDown(1)</script>
    </binding>
    <mod-up>
    <binding>
      <command>nasal</command>
      <script>controls.flapsDown(0)</script>
    </binding>
    </mod-up>
  </action>
  <action>
    <button>1</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>controls.flapsDown(-1)</script>
    </binding>
    <mod-up>
    <binding>
      <command>nasal</command>
      <script>controls.flapsDown(0)</script>
    </binding>
    </mod-up>
  </action>
</animation>

<!-- The parking brake -->
		<animation>
			<type>rotate</type>
			<object-name>gearslever</object-name>
		  <property>gear/gear[0]/position-norm</property>
			<factor>-60</factor>
		  <center>
		    <x-m> 0.2818</x-m>
		    <y-m>-0.4928</y-m>
		    <z-m>-0.0032</z-m>
		  </center>
		  <axis>
		    <x>0.0</x>
		    <y>1.0</y>
		    <z>0.0</z>
		  </axis>
		</animation>

		<animation>
	    <type>pick</type>
	    <object-name>gearslever</object-name>
	    <action>
	      <button>0</button>
	      <binding>
	        <command>property-toggle</command>
	        <property>controls/gear/gear-down</property>
	      </binding>
	    </action>
	  </animation>

		<!-- Cabin light -->
	<animation>
		<type>rotate</type>
		<object-name>cabinlightknob</object-name>
		<property>systems/accel-electrical/outputs/cabin-dim-pos</property>
		<factor>-88</factor>
		<center>
			<x-m> 0.0</x-m>
			<y-m>-0.3702</y-m>
			<z-m> 0.232</z-m>
		</center>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>cabinlightknob</object-name>
		<visible>true</visible>
		<action>
				<button>3</button>
				<binding>
				<condition>
						<not><property>devices/status/keyboard/shift</property></not>
						<not><property>devices/status/keyboard/super</property></not>
				</condition>
				<command>property-adjust</command>
				<property>systems/accel-electrical/outputs/cabin-dim-pos</property>
				<step>0.1</step>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
				</binding>
				<binding>
				<condition>
					 <or>
						<property>devices/status/keyboard/shift</property>
						<property>devices/status/keyboard/super</property>
					 </or>
				</condition>
				<command>property-adjust</command>
				<property>systems/accel-electrical/outputs/cabin-dim-pos</property>
				<step>0.5</step>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
				</binding>
		</action>
		<action>
				<button>4</button>
				<binding>
					<condition>
							<not><property>devices/status/keyboard/shift</property></not>
							<not><property>devices/status/keyboard/super</property></not>
					</condition>
				<command>property-adjust</command>
				<property>systems/accel-electrical/outputs/cabin-dim-pos</property>
				<step>-0.1</step>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
				</binding>
				<binding>
				<condition>
					 <or>
						<property>devices/status/keyboard/shift</property>
						<property>devices/status/keyboard/super</property>
					 </or>
				</condition>
				<command>property-adjust</command>
				<property>systems/accel-electrical/outputs/cabin-dim-pos</property>
				<step>-0.5</step>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
				</binding>
		</action>
	</animation>

</PropertyList>
