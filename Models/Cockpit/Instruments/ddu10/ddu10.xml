<PropertyList>

<path>ddu10.ac</path>

	<effect>
		<inherits-from>../../../Effects/lcd_display</inherits-from>
		<object-name>display</object-name>
	</effect>

	<animation>
		<type>material</type>
		<object-name>face</object-name>
		<condition>
      <not><property>/sim/rendering/rembrandt/enabled</property></not>
      <property>systems/accel-electrical/outputs/cabin-dim</property>
    </condition>
    <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0.8</blue>
      <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
    </emission>
	</animation>

	<animation>
	    <type>material</type>
	    <object-name>display</object-name>
	    <object-name>sysstart</object-name>
	    <emission>
	        <red>0.8</red>
	        <green>0.8</green>
	        <blue>0.8</blue>
	        <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
	    </emission>
	</animation>

	<animation>
	  <type>select</type>
	  <object-name>sysstart</object-name>
	  <condition>
	    <and>
	      <less-than>
	        <property>systems/accel-electrical/startsys</property>
	        <value>0.98</value>
	      </less-than>
	      <greater-than>
	        <property>systems/accel-electrical/startsys</property>
	        <value>0.05</value>
	      </greater-than>
	      <property>systems/accel-electrical/start12v</property>
	    </and>
	  </condition>
	</animation>

	<animation>
	  <type>select</type>
	  <object-name>display</object-name>
	  <condition>
	  <and>
	    <greater-than>
	      <property>systems/accel-electrical/startsys</property>
	      <value>0.97</value>
	    </greater-than>
	    <property>systems/accel-electrical/start12v</property>
	  </and>
	  </condition>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>display</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>nasal</command>
				<script>canvas_ddu10.showDDU10();</script>
			</binding>
		</action>
	</animation>

	<animation>
			<type>pick</type>
			<object-name>touchbutton</object-name>
			<visible>false</visible>
			<action>
				<button>0</button>
				<repeatable>false</repeatable>
				<binding>
					<command>property-toggle</command>
					<property>/sim/sound/switch2</property>
				</binding>
			</action>
	</animation>

