<PropertyList>

 <path>cockpit.ac</path>

 <animation>
   <type>range</type>
   <min-m>0</min-m>
   <max-m>50</max-m>
 </animation>

 <animation>
   <object-name>hull</object-name>
   <object-name>joystick</object-name>
   <object-name>panel</object-name>
   <object-name>seats</object-name>
   <object-name>instpanel</object-name>
 </animation>

 	<animation>
 		<type>material</type>
    <object-name>hull</object-name>
    <object-name>joystick</object-name>
    <object-name>panel</object-name>
    <object-name>seats</object-name>
 		<condition>
       <not><property>/sim/rendering/rembrandt/enabled</property></not>
       <property>systems/accel-electrical/outputs/cabin-dim</property>
     </condition>
     <emission>
       <red>0.15</red>
       <green>0.15</green>
       <blue>0.15</blue>
       <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
     </emission>
 	</animation>

   	<animation>
   		<type>material</type>
      <object-name>pedalR</object-name>
      <object-name>pedalL</object-name>
   		<condition>
         <not><property>/sim/rendering/rembrandt/enabled</property></not>
         <property>systems/accel-electrical/outputs/cabin-dim</property>
       </condition>
       <emission>
         <red>0.05</red>
         <green>0.05</green>
         <blue>0.05</blue>
         <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
       </emission>
   	</animation>
 <!-- Instrument Panel-->
 <model>
   <name>instpanel</name>
   <path>Aircraft/RR-ACCEL/Models/Cockpit/instpanel.xml</path>
 </model>

 <!-- joystick -->
 <animation>
   <type>rotate</type>
   <object-name>joystick</object-name>
   <property>surface-positions/elevator-pos-norm</property>
   <factor> -20 </factor>
   <center>
     <x-m> 0.15 </x-m>
     <y-m> 0.000 </y-m>
     <z-m> -0.074 </z-m>
   </center>
   <axis>
     <x>  0 </x>
     <y>  1 </y>
     <z>  0 </z>
   </axis>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>joystick</object-name>
   <property>surface-positions/left-aileron-pos-norm</property>
   <factor> -20 </factor>
   <center>
     <x-m> 0.15 </x-m>
     <y-m> 0.000 </y-m>
     <z-m> -0.074 </z-m>
   </center>
   <axis>
     <x>  1 </x>
     <y>  0 </y>
     <z>  0 </z>
   </axis>
 </animation>

 	<!-- rudder pedals -->
 	<animation>
 		<type>translate</type>
 		<object-name>pedalL</object-name>
 		<property>surface-positions/rudder-pos-norm</property>
 		<factor>0.04</factor>
 		<axis>
 			<x>1.0</x>
 			<y>0.0</y>
 			<z>0.0</z>
 		</axis>
 	</animation>

 	<animation>
 		<type>translate</type>
 		<object-name>pedalR</object-name>
 		<property>surface-positions/rudder-pos-norm</property>
 		<factor>-0.04</factor>
 		<axis>
 			<x>1.0</x>
 			<y>0.0</y>
 			<z>0.0</z>
 		</axis>
 	</animation>

  <animation>
    <type>rotate</type>
    <object-name>pedalL</object-name>
    <property>/controls/gear/brake-left</property>
    <factor> -20 </factor>
    <center>
      <x-m>-0.3462 </x-m>
      <y-m> 0.000 </y-m>
      <z-m>-0.3034 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>

    <animation>
      <type>rotate</type>
      <object-name>pedalR</object-name>
      <property>/controls/gear/brake-right</property>
      <factor> -20 </factor>
      <center>
        <x-m>-0.3462 </x-m>
        <y-m> 0.000 </y-m>
        <z-m>-0.3034 </z-m>
      </center>
      <axis>
        <x>  0 </x>
        <y>  1 </y>
        <z>  0 </z>
      </axis>
    </animation>
 </PropertyList>
