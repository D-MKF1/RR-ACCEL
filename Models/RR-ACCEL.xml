 <animation>
   <type>rotate</type>
   <object-name>prop_3</object-name>
   <property>/fdm/jsbsim/propulsion/engine/blade-angle</property>
   <factor> 1 </factor>
   <axis>
     <x1-m>-3.268 </x1-m>
     <y1-m> 0.892 </y1-m>
     <z1-m>-0.515 </z1-m>
     <x2-m>-3.268 </x2-m>
     <y2-m>   0.0 </y2-m>
     <z2-m>   0.0 </z2-m>
