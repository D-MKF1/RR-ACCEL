<PropertyList>
 <path>RR-ACCEL.ac</path>

   <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/RR-ACCEL/Models/Liveries");
    </load>

    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
  <type>material</type>
  <object-name>aileron-left</object-name>
  <object-name>aileron-right</object-name>
  <object-name>canopy-frame</object-name>
  <object-name>elevator</object-name>
  <object-name>elevwings</object-name>
  <object-name>fuselage</object-name>
  <object-name>propnose</object-name>
  <object-name>rudder</object-name>
  <object-name>wheel-left-gear-door-fu</object-name>
  <object-name>wheel-left-gear-door-w</object-name>
  <object-name>wheel-right-gear-door-fu</object-name>
  <object-name>wheel-right-gear-door-w</object-name>

  <property-base>sim/model/livery</property-base>
  <texture-prop>texture</texture-prop>
  <texture>Official.png</texture>
  </animation>

  <effect>
    <inherits-from>Aircraft/RR-ACCEL/Models/Effects/specular</inherits-from>
    <object-name>aileron-left</object-name>
    <object-name>aileron-right</object-name>
    <object-name>canopy-frame</object-name>
    <object-name>elevator</object-name>
    <object-name>elevwings</object-name>
    <object-name>fuselage</object-name>
    <object-name>propnose</object-name>
    <object-name>rudder</object-name>
    <object-name>wheel-left-axis-main</object-name>
    <object-name>wheel-left-gear-door-fu</object-name>
    <object-name>wheel-left-gear-door-w</object-name>
    <object-name>wheel-left-stab</object-name>
    <object-name>wheel-right-axis-main</object-name>
    <object-name>wheel-right-gear-door-fu</object-name>
    <object-name>wheel-right-gear-door-w</object-name>
    <object-name>wheel-right-stab</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>canopy-frame-inlet</object-name>
    <object-name>opener</object-name>
    <condition>
      <not><property>/sim/rendering/rembrandt/enabled</property></not>
      <property>systems/accel-electrical/outputs/cabin-dim</property>
    </condition>
    <emission>
      <red>0.2</red>
      <green>0.2</green>
      <blue>0.2</blue>
      <factor-prop>systems/accel-electrical/outputs/cabin-dim</factor-prop>
    </emission>
  </animation>

   <!-- Cockpit -->
   <model>
     <name>cockpit</name>
     <path>Aircraft/RR-ACCEL/Models/Cockpit/cockpit.xml</path>
     <offsets>
       <x-m>0</x-m>
       <y-m>0</y-m>
       <z-m>0</z-m>
     </offsets>
   </model>

   <model>
     <name>ap-fg</name>
     <path>Aircraft/RR-ACCEL/Models/Cockpit/Instruments/ap/ap-fg.xml</path>
     <offsets>
       <x-m>0.09</x-m>
       <y-m>-0.36</y-m>
       <z-m> 0.345 </z-m>
       <heading-deg>65</heading-deg>
     </offsets>
   </model>

  <animation>
    <type>translate</type>
    <object-name>canopy</object-name>
    <object-name>canopy-frame</object-name>
    <object-name>canopy-frame-inlet</object-name>
    <object-name>ap-fg</object-name>
    <object-name>panel</object-name>
    <object-name>fuselage</object-name>
    <object-name>cockpit</object-name>
    <property>rraccel/shake-effect/shaking</property>
    <axis>
      <x1-m>  0</x1-m>
      <y1-m>  0</y1-m>
      <z1-m>  0</z1-m>
      <x2-m>  1</x2-m>
      <y2-m> -1</y2-m>
      <z2-m>  1</z2-m>
    </axis>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/RR-ACCEL/Models/glass_shader.png</texture>
    <object-name>canopy</object-name>
  </animation>

 <animation>
   <type>noshadow</type>
   <object-name>canopy</object-name>
   <object-name>propdisc</object-name>
   <object-name>propblur</object-name>
 </animation>

 <!-- working for Rembrandt -->
<effect>
<inherits-from>Effects/model-transparent</inherits-from>
 <object-name>propdisc</object-name>
 <object-name>propblur</object-name>
</effect>

<animation>
  <type>select</type>
  <object-name>brakewedge</object-name>
  <condition>
    <and>
      <property>sim/multiplay/generic/int[0]</property>
      <property>sim/multiplay/generic/int[1]</property>
    </and>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>propdisc</object-name>
  <condition>
    <greater-than>
      <property>engines/engine[0]/rpm</property>
      <value>1500</value>
    </greater-than>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>propblur</object-name>
  <condition>
  <and>
    <greater-than>
      <property>engines/engine[0]/rpm</property>
      <value>600.000</value>
    </greater-than>
    <less-than>
      <property>engines/engine[0]/rpm</property>
      <value>1500.001</value>
    </less-than>
  </and>
  </condition>
</animation>

 <animation>
  <type>select</type>
  <object-name>prop_1</object-name>
  <object-name>prop_2</object-name>
  <object-name>prop_3</object-name>
  <condition>
   <less-than>
    <property>/engines/engine[0]/rpm</property>
    <value>1000</value>
   </less-than>
  </condition>
 </animation>

 <animation>
  <type>spin</type>
  <object-name>propblur</object-name>
  <object-name>propdisc</object-name>
  <object-name>prop_1</object-name>
  <object-name>prop_2</object-name>
  <object-name>prop_3</object-name>
  <object-name>propnose</object-name>
  <property>/fdm/jsbsim/propulsion/engine/propeller-rpm</property>
  <factor>-0.479</factor>
  <center>
   <x-m>3.30</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <!-- propeller pitch -->
 <animation>
   <type>rotate</type>
   <object-name>prop_1</object-name>
   <property>/fdm/jsbsim/propulsion/engine/blade-angle</property>
   <factor> 1 </factor>
   <axis>
     <x1-m>-3.268 </x1-m>
     <y1-m>   0.0 </y1-m>
     <z1-m> 1.022 </z1-m>
     <x2-m>-3.268 </x2-m>
     <y2-m>   0.0 </y2-m>
     <z2-m>   0.0 </z2-m>
   </axis>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>prop_2</object-name>
   <property>/fdm/jsbsim/propulsion/engine/blade-angle</property>
   <factor> 1 </factor>
   <axis>
     <x1-m>-3.268 </x1-m>
     <y1-m>-0.892 </y1-m>
     <z1-m>-0.515 </z1-m>
     <x2-m>-3.268 </x2-m>
     <y2-m>   0.0 </y2-m>
     <z2-m>   0.0 </z2-m>
   </axis>
